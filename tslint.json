{
	"rules": {
		"no-string-throw": true,
		"no-duplicate-variable": true,
		"no-var-keyword": true,
		"promise-must-complete": true,
		"curly": true,
		"class-name": true,
		"semicolon": [
			true,
			"always"
		],
		"triple-equals": true,
		"indent": [
			true,
			"spaces",
			4
		],
		"no-switch-case-fall-through": true,
		"no-null-keyword": true,
		"variable-name": true
	},
	"rulesDirectory": [
		"tslint-microsoft-contrib"
	]
}