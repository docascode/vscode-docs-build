{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "outDir": "out",
    "lib": [
      "esnext.asynciterable",
      "es6"
    ],
    "sourceMap": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "alwaysStrict": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noFallthroughCasesInSwitch": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/typings/"
    ]
  },
  "exclude": [
    ".vscode-test",
    "resources",
    "node_modules",
  ]
}