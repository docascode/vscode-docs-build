{
  "name": "docs-build",
  "displayName": "docs-validation",
  "description": "Docs Validation Extension which enables you to run build validation on a Docs conceptual or Learn repo at authoring time in VS Code",
  "version": "0.2.4",
  "engines": {
    "node": ">=10",
    "vscode": "^1.40.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets",
    "Other"
  ],
  "keywords": [
    "Docs",
    "Docs Build",
    "ceapex",
    "docfx",
    "local build",
    "local validation"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/docascode/vscode-docs-build"
  },
  "homepage": "https://github.com/docascode/vscode-docs-build",
  "icon": "resources/docs-logo-ms.png",
  "galleryBanner": {
    "color": "#FFFFFF",
    "theme": "light"
  },
  "activationEvents": [
    "workspaceContains:.openpublishing.publish.config.json",
    "onCommand:docs.build"
  ],
  "author": {
    "email": "jipe@microsoft.com",
    "name": "Jiayin Pei"
  },
  "publisher": "docsmsft",
  "main": "./out/src/extension",
  "contributes": {
    "configuration": {
      "title": "Docs Validation",
      "properties": {
        "docs-build.environment": {
          "type": "string",
          "enum": [
            "PROD",
            "PPE"
          ],
          "default": "PROD",
          "description": "The environment this extension targets to."
        },
        "docs-build.debugMode.enable": {
          "type": "boolean",
          "default": false,
          "description": "Enable the debug mode for trouble shooting, with this flag enabled, more detail information will be output in the output channel"
        },
        "docs-build.userType": {
          "type": "string",
          "enum": [
            "",
            "Microsoft Employee",
            "Public Contributor"
          ],
          "default": "",
          "description": "Microsoft employee or public contributor"
        },
        "docs-build.realTimeValidation.automaticallyEnable": {
          "type": "boolean",
          "default": false,
          "description": "With this checked, the real-time validation will be automatically enabled once the opened repository is a valid Docs repository."
        }
      }
    },
    "commands": [
      {
        "command": "docs.signIn",
        "title": "Sign in to Docs (!This is only available for Microsoft employee)",
        "category": "Docs"
      },
      {
        "command": "docs.signOut",
        "title": "Sign out from Docs",
        "category": "Docs"
      },
      {
        "command": "docs.build",
        "title": "Validate this repository",
        "category": "Docs"
      },
      {
        "command": "docs.validationQuickPick",
        "title": "Docs Validation menu"
      },
      {
        "command": "docs.cancelBuild",
        "title": "Cancel the validation",
        "category": "Docs"
      },
      {
        "command": "docs.openInstallationDirectory",
        "title": "Open extension install directory",
        "category": "Docs"
      }
    ],
    "keybindings": [
      {
        "command": "docs.validationQuickPick",
        "key": "Alt+D",
        "mac": "Alt+D",
        "when": "editorTextFocus"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "docs.build",
          "group": "navigation"
        }
      ]
    },
    "languages": [
      {
        "id": "docs-output",
        "mimetypes": [
          "text/x-code-output"
        ]
      }
    ],
    "grammars": [
      {
        "language": "docs-output",
        "scopeName": "docs.output",
        "path": "./resources/syntaxes/docs-output.tmLanguage"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "webpack --mode production",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "publish": "vsce publish",
    "pretest": "npm run compile",
    "pretest:ut": "npm run compile",
    "spelling": "cspell \"**/*.*\"",
    "test:ut": "gulp test:unit",
    "test": "gulp test",
    "prebenchmark": "webpack --mode production",
    "benchmark": "gulp test:benchmark",
    "lint": "eslint .",
    "pre-commit": "npm run test:ut & npm run lint"
  },
  "devDependencies": {
    "@types/glob": "^7.1.1",
    "@types/gulp": "^4.0.6",
    "@types/mocha": "^8.0.3",
    "@types/node": "^10.17.13",
    "@types/number-to-words": "^1.2.0",
    "@types/sinon": "^9.0.5",
    "@types/vscode": "^1.40.0",
    "@typescript-eslint/eslint-plugin": "^4.10.0",
    "@typescript-eslint/parser": "^4.10.0",
    "async-child-process": "^1.1.1",
    "codecov": "^3.7.1",
    "cspell": "^5.0.7",
    "eslint": "^7.15.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "get-port": "^5.1.0",
    "glob": "^7.1.6",
    "gulp": "^4.0.2",
    "mocha": "^8.1.3",
    "mocha-typescript": "^1.1.17",
    "mock-http-server": "^1.4.1",
    "number-to-words": "^1.2.4",
    "nyc": "^15.0.0",
    "sinon": "^9.0.3",
    "ts-loader": "^6.2.1",
    "ts-node": "^8.5.4",
    "typescript": "^3.3.1",
    "vsce": "^1.71.0",
    "vscode-test": "^1.2.0",
    "webpack": "^4.41.5",
    "webpack-cli": "^3.3.10"
  },
  "dependencies": {
    "@types/du": "^1.0.0",
    "@types/fs-extra": "^8.0.1",
    "@types/git-url-parse": "^9.0.0",
    "@types/mkdirp": "^0.5.2",
    "@types/ps-tree": "^1.1.0",
    "@types/request": "^2.48.4",
    "@types/uuid": "^3.4.7",
    "@types/yauzl": "^2.9.1",
    "applicationinsights": "^1.7.2",
    "arch": "^2.1.1",
    "du": "^1.0.0",
    "fs-extra": "^8.1.0",
    "git-url-parse": "^11.1.2",
    "husky": "^4.3.0",
    "keytar": "^7.2.0",
    "mkdirp": "^0.5.1",
    "ms-rest-azure": "^3.0.0",
    "ps-tree": "^1.2.0",
    "querystring": "^0.2.0",
    "request": "^2.88.0",
    "rxjs": "^6.5.3",
    "simple-git": "^2.27.0",
    "temp-dir": "^2.0.0",
    "uuid": "^3.4.0",
    "vscode-languageclient": "^7.0.0-next.12",
    "yauzl": "^2.10.0"
  },
  "runtimeDependencies": [
    {
      "id": "docfx-win7-x64",
      "name": "docfx",
      "description": "DocFX for Windows (x64)",
      "url": "https://opsbuildk8sprod.blob.core.windows.net/docfx-bin/docfx-win7-x64-3.0.0-beta1.682+eb31f22baa.zip",
      "binary": "docfx.exe",
      "installPath": ".docfx",
      "rid": "win7-x64",
      "integrity": "383E5CA9B01801CEBC50CE0BF31DB3D06DC55E8EFC4D9A5B195F6B2CDCBAEC5F"
    },
    {
      "id": "docfx-osx-x64",
      "name": "docfx",
      "description": "DocFX for OSX(x64)",
      "url": "https://opsbuildk8sprod.blob.core.windows.net/docfx-bin/docfx-osx-x64-3.0.0-beta1.682+eb31f22baa.zip",
      "binary": "./docfx",
      "installPath": ".docfx",
      "rid": "osx-x64",
      "integrity": "A4E106C6B132D3D25431A71FEA55C90B2CD4EF774361C939E05D3B0FAA219012"
    }
  ]
}