{
  "name": "docs-build",
  "displayName": "docs-validation",
  "description": "Docs Validation Extension",
  "version": "0.1.14",
  "engines": {
    "vscode": "^1.40.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets",
    "Other"
  ],
  "keywords": [
    "Docs",
    "Docs Build",
    "ceapex",
    "docfx",
    "local build"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/docascode/vscode-docs-build"
  },
  "homepage": "https://github.com/docascode/vscode-docs-build",
  "icon": "resources/docs-logo-ms.png",
  "galleryBanner": {
    "color": "#FFFFFF",
    "theme": "light"
  },
  "activationEvents": [
    "workspaceContains:**/.openpublishing.publish.config.json"
  ],
  "author": {
    "email": "jipe@microsoft.com",
    "name": "Jiayin Pei"
  },
  "preview": true,
  "publisher": "ceapex",
  "main": "./out/src/extension",
  "contributes": {
    "configuration": {
      "title": "Docs Validation Configuration",
      "properties": {
        "docs-build.environment": {
          "type": "string",
          "enum": [
            "PROD",
            "PPE"
          ],
          "default": "PROD",
          "description": "The Build environment"
        }
      }
    },
    "commands": [
      {
        "command": "docs.signIn",
        "title": "Sign-in to Docs Build",
        "category": "Docs"
      },
      {
        "command": "docs.signOut",
        "title": "Sign-out from Docs Build",
        "category": "Docs"
      },
      {
        "command": "docs.build",
        "title": "Build this workspace folder",
        "category": "Docs"
      },
      {
        "command": "docs.validationQuickPick",
        "title": "Docs Validation menu"
      }
    ],
    "keybindings": [
      {
        "command": "docs.validationQuickPick",
        "key": "Alt+D",
        "mac": "Alt+D",
        "when": "editorTextFocus"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "docs.build",
          "group": "navigation"
        }
      ]
    },
    "languages": [
      {
        "id": "docs-output",
        "mimetypes": [
          "text/x-code-output"
        ]
      }
    ],
    "grammars": [
      {
        "language": "docs-output",
        "scopeName": "docs.output",
        "path": "./resources/syntaxes/docs-output.tmLanguage"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "webpack --mode production",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "publish": "vsce publish",
    "pretest": "npm run compile",
    "test": "gulp test",
    "prebenchmark": "webpack --mode production",
    "benchmark": "gulp test:benchmark",
    "lint": "tslint --project tsconfig.json -e src/*.d.ts -t verbose"
  },
  "devDependencies": {
    "@types/glob": "^7.1.1",
    "@types/gulp": "^4.0.6",
    "@types/mocha": "^5.2.7",
    "@types/node": "^10.17.13",
    "@types/number-to-words": "^1.2.0",
    "@types/sinon": "^7.5.1",
    "@types/vscode": "^1.40.0",
    "async-child-process": "^1.1.1",
    "codecov": "^3.6.5",
    "get-port": "^5.1.0",
    "gulp": "^4.0.2",
    "mocha": "^6.2.2",
    "mocha-typescript": "^1.1.17",
    "mock-http-server": "^1.4.1",
    "number-to-words": "^1.2.4",
    "nyc": "^15.0.0",
    "sinon": "^8.0.1",
    "ts-loader": "^6.2.1",
    "ts-node": "^8.5.4",
    "tslint": "^5.20.1",
    "tslint-microsoft-contrib": "^6.2.0",
    "typescript": "^3.3.1",
    "vsce": "^1.71.0",
    "vscode-test": "^1.2.0",
    "webpack": "^4.41.5",
    "webpack-cli": "^3.3.10"
  },
  "dependencies": {
    "@types/du": "^1.0.0",
    "@types/fs-extra": "^8.0.1",
    "@types/git-url-parse": "^9.0.0",
    "@types/keytar": "^4.4.0",
    "@types/mkdirp": "^0.5.2",
    "@types/request": "^2.48.4",
    "@types/uuid": "^3.4.7",
    "@types/yauzl": "^2.9.1",
    "applicationinsights": "^1.7.2",
    "arch": "^2.1.1",
    "du": "^1.0.0",
    "fs-extra": "^8.1.0",
    "git-url-parse": "^11.1.2",
    "mkdirp": "^0.5.1",
    "ms-rest-azure": "^3.0.0",
    "querystring": "^0.2.0",
    "request": "^2.88.0",
    "rxjs": "^6.5.3",
    "simple-git": "^1.129.0",
    "uuid": "^3.4.0",
    "yauzl": "^2.10.0"
  },
  "runtimeDependencies": [
    {
      "id": "docfx-win7-x64",
      "name": "docfx",
      "description": "DocFX for Windows (x64)",
      "url": "https://opsbuildk8sprod.blob.core.windows.net/docfx-bin/docfx-win7-x64-3.0.0-beta-01537-81a60dfe5.zip",
      "binary": "docfx.exe",
      "installPath": ".docfx",
      "rid": "win7-x64",
      "integrity": "A209DE60C9A272C4AB68E16467D8C362FBC3A8358D1885C5A091F9DEDFABB824"
    },
    {
      "id": "docfx-osx-x64",
      "name": "docfx",
      "description": "DocFX for OSX(x64)",
      "url": "https://opsbuildk8sprod.blob.core.windows.net/docfx-bin/docfx-osx-x64-3.0.0-beta-01537-81a60dfe5.zip",
      "binary": "./docfx",
      "installPath": ".docfx",
      "rid": "osx-x64",
      "integrity": "1EF8074D91A448C8CD2722A085ABA507075031134C9F12EE36CFBE8B1CAFA13D"
    }
  ]
}
